<%- include('../partials/header.ejs') %>
    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-12">

                <% if (message.success) {%>
                    <div class="alert alert-success" role="alert">
                        <strong><%= message.success %></strong>
                    </div>
                <% } %>

                <% if (message.error) {%>
                    <div class="alert alert-danger" role="alert">
                        <strong><%= message.error %></strong>
                    </div>
                <% } %>

                <div class="card shadow">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="fw-bold text-secondary">My posts</h2>
                        <a href="/create-post" class="btn btn-danger btn-sm">CREATE</a>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped align-middle">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Content</th>
                                    <th>Image</th>
                                    <th>Created </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% posts.forEach(post => { %>
                                <tr>
                                    <td><%= post.title %></td>
                                    <td><%= post.content.substring(0,50) %>...</td>
                                    <td>
                                        <img src="/uploads/<%= post.image %>" alt="<%= post.title %>" class="img-fluid img-thumbnail" width="100">
                                    </td>
                                    <td><%= post.createdAt.toLocaleDateString() %></td>
                                    <td>
                                        <a href="/post/<%= post.slug %>" class="btn btn-success btn-sm">View</a>
                                        <a href="/edit-post/<%= post._id %>" class="btn btn-primary btn-sm">Edit</a>
                                        <form action="/delete-post/<%= post._id %>" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                            </tbody>
